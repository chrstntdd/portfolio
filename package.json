  "scripts": {
    "start": "cross-env NODE_ENV=development ./node_modules/.bin/webpack-dev-server --quiet --color -d --config webpack.config.js",
    "build": "cross-env NODE_ENV=production USE_SW=true ts-node -T ./scripts/build.ts",
    "build-check": "yarn build && ts-node ./scripts/mock-server.ts",
    "build-netlify": "cross-env NODE_ENV=production NETLIFY=true ts-node -T ./scripts/build.ts",
    "debug-sw": "node fuse.js front-debug-sw",
    "s:prod": "cross-env NODE_ENV=production node fuse.js server-dev",
    "s:dev": "cross-env NODE_ENV=development node fuse.js server-dev",
    "pre:gql": "yarn s:prod && cross-env NODE_ENV=production yarn node ./build/server/index.js",
    "gql": "./node_modules/.bin/elm-graphql http://localhost:3000/graphql --base GqlApi"
  },
  "browserslist": [
    ">= 2%"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.elm": [
      "./node_modules/.bin/elm-format --yes",
      "git add"
    ],
    "**/*.{ts,scss}": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  }
}
