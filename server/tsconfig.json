{
  "compilerOptions": {
    "lib": ["esnext"],
    "noImplicitAny": false,
    "esModuleInterop": true,
    "noImplicitUseStrict": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "**/*.test.ts", "src/client/**.*"]
}
