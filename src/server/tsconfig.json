{
  "compilerOptions": {
    "lib": ["es7", "dom"],
    "watch": true,
    "noImplicitAny": false,
    "noImplicitUseStrict": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../dist",
    "typeRoots": ["./node_modules/@types"]
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "**/*.test.ts", "src/client/**.*"]
}
