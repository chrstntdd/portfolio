{
  "compilerOptions": {
    "lib": [
      "es7",
      "dom"
    ],
    "allowJs": true,
    "watch": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": false,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../dist",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "src/client/**.*"
  ]
}